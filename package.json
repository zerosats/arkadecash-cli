{
  "name": "@zerosats/arkadecash-cli",
  "version": "0.1.0",
  "description": "Arkade Cash CLI - Unified Bitcoin payments for AI agents via Arkade, Boltz, Lendasat, Cashu, and Fedimint",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "arkadecash": "dist/bin/arkadecash.js",
    "arkadecash-daemon": "dist/bin/arkadecashd.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "postbuild": "cp -r src/storage/migrations dist/storage/migrations",
    "dev": "tsc --watch",
    "start": "node dist/bin/arkadecashd.js",
    "cli": "node dist/bin/arkadecash.js",
    "prepublishOnly": "npm run build && npm run typecheck",
    "test": "vitest",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --ext .ts"
  },
  "keywords": [
    "bitcoin",
    "lightning",
    "cashu",
    "fedimint",
    "arkade",
    "ecash",
    "privacy",
    "mcp"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zerosats/arkadecash-cli.git"
  },
  "homepage": "https://github.com/zerosats/arkadecash-cli#readme",
  "bugs": {
    "url": "https://github.com/zerosats/arkadecash-cli/issues"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "author": "zerosats",
  "license": "MIT",
  "dependencies": {
    "@arkade-os/boltz-swap": "0.2.12",
    "@arkade-os/sdk": "^0.3.3",
    "@cashu/cashu-ts": "^3.2.2",
    "@fedimint/core": "^0.1.0",
    "@fedimint/transport-web": "^0.1.0",
    "@modelcontextprotocol/sdk": "^1.0.0",
    "@scure/bip32": "^1.3.0",
    "@scure/bip39": "^1.2.0",
    "better-sqlite3": "^11.0.0",
    "commander": "^12.0.0",
    "express": "^4.19.0",
    "zod": "^3.23.0"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.0",
    "@types/express": "^4.17.0",
    "@types/node": "^20.0.0",
    "typescript": "^5.4.0",
    "vitest": "^1.0.0"
  },
  "optionalDependencies": {
    "@lendasat/lendaswap-sdk-native": "*"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
